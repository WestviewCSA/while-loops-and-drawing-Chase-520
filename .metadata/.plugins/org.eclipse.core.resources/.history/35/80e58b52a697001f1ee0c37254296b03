		// User input
		getParams("Please enter the monthly payment: ",0.0,1000.0);
		getParams("Please enter the interest rate(percentage 2.6% = 2.6): ",0,100);
		getParams("Please enter the duration of the loan, in years: ",0,10);
		
		System.out.println();
		double interest_rate = scan.nextDouble()/100.0;
		
		System.out.println("Please enter the duration of the loan, in years: ");
		int years = scan.nextInt();
		printHeader();
		
	}

}
